#!/bin/sh

# start ssh-agent
if ! pgrep -u "$USER" ssh-agent > /dev/null; then
    ssh-agent | grep -v echo> ~/.ssh-agent-thing
fi

# ssh-add key
DIR=$HOME/.ssh/private
if [ -d "$DIR" ];then
    for key in `ls $DIR`
    do
        ssh-add key
    done
fi

HOST=`hostname`
if [ "$HOST" = "lazzy-company-pc" ];then
    xrandr --output DP1 --right-of HDMI2
fi
